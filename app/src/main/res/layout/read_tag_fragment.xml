<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aalto.nfctest.ReadTag"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_to_server"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/darkNavyBlue"/>

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send To Server"
            android:id="@+id/sendToggleBtn"
            android:checked="false" />
    </LinearLayout>


    <TextView
        android:id="@+id/attachTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/attach_tag"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/darkNavyBlue"
        android:textAlignment="center"
        android:paddingTop="30dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tagDetails"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:layout_weight="0.81"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/nfcTagIdLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nfc_tag_id_label"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/darkNavyBlue"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nfcTagId"
            android:editable="false" />



    </LinearLayout>


</LinearLayout>
